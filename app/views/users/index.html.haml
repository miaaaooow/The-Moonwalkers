%h1 Потребители

%table
  %tr
    %th 
    %th Потребителско име
    %th Име
    %th Контакт
    %th Роля
    %th Регистриран на
    = if session[:admin]
      %th Редактирай
  - @users.each do |user| 
    %tr 
      %td= user.picture
      %td= user.username
      %td= user.name
      %td= user.contact
      %td= user.role
      %td= user.created_at
      = if session[:admin]
        %td= link_to 'Редактирай', edit_user_path(user)

= will_paginate @users, :previous_label => t("previous"), :next_label => t("next")
